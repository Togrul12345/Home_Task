@using PurpleBuzzTask.Models;
@model IEnumerable<Service>;

<button class=" mb-2 btn btn-primary " asp-action="Create" type="submit">Create</button>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Service item in Model){
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.MainImageUrl</td>
                <td><button class=" btn btn-primary " asp-area="Admin" asp-controller="Service" asp-action="Update" asp-route-Id="@item.Id" type="submit">Update</button></td>
                <td><button class=" btn btn-primary " asp-area="Admin" asp-controller="Service" asp-action="Delete" asp-route-Id="@item.Id" type="submit">Delete</button></td>
                
                
            </tr>
        }
        
       
    </tbody>
</table>