@using PurpleBuzzTask.DTOs.WorkDTOs;
@model UpdateWorkDTO;




<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="staticEmail" asp-for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" id="staticEmail">
            <span asp-validation-for="Title"></span>
        </div>

    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewMainImg" class="col-sm-2 col-form-label">NewPhoto</label>
       <input asp-for="NewMainImg" type="file" />
    </div>

    <div  class="form-group">
        <label asp-for="ExistingMainImgUrl" class="col-sm-2 col-form-label">ExistingMainUrl</label>
      
           <img   height="100px" src="~/Upload/MainImg/@Model.ExistingMainImgUrl"/>
      

    </div>
    <div class="form-group">
        <label asp-for="NewPhotos" class="col-sm-2 col-form-label">NewPhotos</label>
        <input asp-for="NewPhotos" multiple="multiple" type="file" />
    </div>

    <div class="form-group">
        <label asp-for="ExistingPhotos" class="col-sm-2 col-form-label">ExistingPhotos</label>
        @foreach(WorkPhoto item in Model.ExistingPhotos ?? new List<WorkPhoto>()){
            <div class="card" style="width: 18rem;">
                <img height="" class="card-img-top" src="~/Upload/AdditionalImgs/@item.ImgUrl" alt="Card image cap" />
                <div class="card-body">
                    <p class="card-text"><a asp-route-Id="@item.Id" asp-action="DeleteWorkPhoto">X</a></p>
                </div>
            </div>
           
        }
       

    </div>
   


    <button type="submit">Submit</button>
</form>