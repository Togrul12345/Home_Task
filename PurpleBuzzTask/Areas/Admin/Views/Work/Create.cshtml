@using PurpleBuzzTask.DTOs.WorkDTOs;
@model CreateWorkDTO;
@using PurpleBuzzTask.Models;



<form method="post" enctype="multipart/form-data">

    <div class="mb-3 row">
        <label for="staticEmail" asp-for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" id="staticEmail">
            <span asp-validation-for="Title"></span>
        </div>

    </div>

    <div class="mb-3 row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label asp-for="MainImg" class="col-sm-2 col-form-label">MainImg</label>
        <div class="col-sm-10">
            <input asp-for="MainImg" type="file" class="form-control">
            <span asp-validation-for="MainImg"></span>
        </div>

    </div>
    <div class="mb-3 row">
        <label  asp-for="WorkPhotos" class="col-sm-2 col-form-label">Photo</label>
        <div class="col-sm-10">
            <input asp-for="WorkPhotos" type="file" class="form-control">
            <span asp-validation-for="WorkPhotos"></span>
        </div>

    </div>
    <div class="mb-3 row">
        <label asp-for="ServiceId" class="col-sm-2 col-form-label">Service</label>
        <select asp-for="ServiceId" asp-items="new SelectList(ViewBag.Services,nameof(Service.Id),nameof(Service.Title))" >


            <option value=>sec</option>



        </select>

        <span asp-validation-for="ServiceId"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="EmployeIds" class="col-sm-2 col-form-label">Employees</label>
        <select asp-for="EmployeIds" asp-items="ViewBag.Employees" class="form-select" aria-label="Default select example">


            <option value=>sec</option>



        </select>

        <span asp-validation-for="EmployeIds"></span>
    </div>
 

    <button type="submit">Submit</button>
</form>